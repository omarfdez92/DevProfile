<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/brand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="center"
            android:background="@color/colorAccent"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:scaleType="centerCrop"/>
    <TextView
            android:text="Devslopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/devslopesTxt" android:textSize="24sp"
            android:textColor="#000" app:fontFamily="sans-serif" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="32dp" android:layout_marginLeft="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/brand"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView17"
            app:layout_constraintStart_toEndOf="@+id/devslopesTxt" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/imageView18"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/brand" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView18"
            app:layout_constraintStart_toEndOf="@+id/imageView17" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView19" app:layout_constraintTop_toTopOf="@+id/imageView17"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView19"
            app:layout_constraintStart_toEndOf="@+id/imageView18"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <Button
            android:text="Customatize Dashboard"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:id="@+id/button3"
            android:textColor="#fff" style="@style/Widget.AppCompat.Button.Borderless" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/brand" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:background="@drawable/rounded_gradient"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView20"
            android:scaleType="centerCrop" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView21"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="16dp" app:layout_constraintDimensionRatio="9:3"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView21"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/imageView23" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintDimensionRatio="9:3"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView22"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false"
            android:cropToPadding="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView23"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="@+id/imageView23"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="9:3"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView23"
            android:scaleType="centerCrop" android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginRight="16dp"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" app:layout_constraintDimensionRatio="9:3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>